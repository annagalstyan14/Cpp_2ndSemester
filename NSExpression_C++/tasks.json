{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build C++",
        "type": "shell",
        "command": "/usr/bin/clang++",
        "args": [
          "-std=c++14",
          "src/main.cpp",
          "-o",
          "build/main"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generated task to build C++ file"
      },
      {
        "label": "Run C++",
        "type": "shell",
        "command": "./build/main",
        "group": {
          "kind": "test",
          "isDefault": true
        }
      }
    ]
  }
  